{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Flutter: Pub Get",
      "type": "shell",
      "command": "flutter",
      "args": ["pub", "get"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "detail": "Install Flutter dependencies"
    },
    {
      "label": "Flutter: Run Web Debug",
      "type": "shell",
      "command": "flutter",
      "args": ["run", "-d", "chrome"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "detail": "Start Flutter web server in debug mode with hot reload",
      "isBackground": true,
      "problemMatcher": "$flutter"
    },
    {
      "label": "Flutter: Run Web Release",
      "type": "shell",
      "command": "flutter",
      "args": ["run", "-d", "chrome", "--release"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "detail": "Start Flutter web server in release mode without debugging",
      "isBackground": true,
      "problemMatcher": "$flutter"
    },
    {
      "label": "Flutter: Build APK",
      "type": "shell",
      "command": "flutter",
      "args": ["build", "apk", "--release"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "detail": "Build Android APK for release distribution"
    },
    {
      "label": "Flutter: Clean",
      "type": "shell",
      "command": "flutter",
      "args": ["clean"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "detail": "Clean Flutter build artifacts and cache"
    },
    {
      "label": "Flutter: Test",
      "type": "shell",
      "command": "flutter",
      "args": ["test"],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "detail": "Run all Flutter unit and widget tests"
    },
    {
      "label": "Flutter: Analyze",
      "type": "shell",
      "command": "flutter",
      "args": ["analyze"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "detail": "Run static analysis and linting on Dart code"
    },
    {
      "label": "Flutter: Run Web Server (Codespaces)",
      "type": "shell",
      "command": "flutter",
      "args": ["run", "-d", "web-server", "--web-hostname", "0.0.0.0", "--web-port", "3000"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "detail": "Start Flutter web server for GitHub Codespaces (accessible via forwarded port)",
      "isBackground": true,
      "problemMatcher": "$flutter"
    },
    {
      "label": "Flutter: Run Web Server Release (Codespaces)",
      "type": "shell",
      "command": "flutter",
      "args": ["run", "-d", "web-server", "--release", "--web-hostname", "0.0.0.0", "--web-port", "3000"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "detail": "Start Flutter web server in release mode for GitHub Codespaces",
      "isBackground": true,
      "problemMatcher": "$flutter"
    }
  ]
}