{
  "name": "Flutter Development",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "remoteUser": "developer",
  "customizations": {
    "vscode": {
      "extensions": [
        "Dart-Code.dart-code",
        "Dart-Code.flutter"
      ],
      "settings": {
        "[dart]": {
          "editor.formatOnSave": true
        },
        "files.autoSave": "onFocusChange"
      }
    }
  },
  "forwardPorts": [3000],
  "postCreateCommand": "flutter doctor && flutter pub get"
}